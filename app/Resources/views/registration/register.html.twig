{% extends 'base.html.twig' %}

{% block head %}
        <nav class="navbar navbar-inverse">
                <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">Todo List</a>
                </div>

                <div class="collapse navbar-collapse" id="userlogin">
                        <form class="navbar-form navbar-right">
                                <a href="/login" role="button" class="btn btn-info" style="width: 80px">Log in</a>
                                <a href="/register" role="button" class="btn btn-info disabled" style="width: 80px">Sign up</a>
                        </form>
                </div>
        </nav>
{% endblock %}

{% block body %}

        <div class="container">
                <h2 class="form-signin-heading" >Your Registration Form</h2>
            {{ form(register_form) }}
                <p class="comment">Fields marked with * (star) are required!</p>
        </div>

{% endblock %}
