{% extends 'base.html.twig' %}

{% block body %}
    <head><meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </head>
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ member.id }}</td>
            </tr>
           {% if (member.name) is not empty %} <tr>
                <th>Name</th>
                <td>{{ member.name }}</td>
            </tr>
            {% endif %}
            {% if member.lastname is not empty %}
            <tr>
                <th>Lastname</th>
                <td>{{ member.lastname }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Registered as</th>
                <td>{{ member.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>User's tasks</th>
                <th>Task name</th>
            </tr>
            {% for task in tasks %}
            <tr>
                <th></th>
                <td>{{ task.taskname }}</td>
            </tr>
            {% endfor %}

        </tbody>
    </table>

    <ul>
            <form action="{{ path('tasks_index', { 'id': team.id }) }}">
                <input type="submit" value="Return to project view" />
            </form>

{% endblock %}